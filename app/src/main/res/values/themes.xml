<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpecialPlaces" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grotto</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/baby_blue</item>
        <item name="colorSecondaryVariant">@color/blue_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomNoActionBarTheme" parent="Theme.SpecialPlaces">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomToolbarStyle">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:colorControlNormal">?attr/colorOnPrimary</item>
    </style>

</resources>